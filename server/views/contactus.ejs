<%- include('partials/head') %>
<title>Contact Us</title>
</head>
<body>
  <%- include('partials/main_nav') %> <!-- Include Navbar -->

  <div class="container mt-5">
    <h1 class="text-center mb-4">Contact Us</h1>
    <p class="text-center mb-5">We would love to hear from you! Please fill out the form below, and we'll get back to you as soon as possible.</p>

    <form class="w-75 mx-auto p-4 shadow-lg rounded bg-light" id="contactForm" onsubmit="return validateForm()">
      <div class="row mb-3">
        <div class="col-md-1 d-flex align-items-center justify-content-center">
          <i class="fas fa-user fa-lg"></i>
        </div>
        <div class="col-md-11">
          <input type="text" class="form-control" id="firstName" placeholder="First Name" required>
        </div>
      </div>
      <div class="row mb-3">
        <div class="col-md-1 d-flex align-items-center justify-content-center">
          <i class="fas fa-user fa-lg"></i>
        </div>
        <div class="col-md-11">
          <input type="text" class="form-control" id="lastName" placeholder="Last Name" required>
        </div>
      </div>
      <div class="row mb-3">
        <div class="col-md-1 d-flex align-items-center justify-content-center">
          <i class="fas fa-envelope fa-lg"></i>
        </div>
        <div class="col-md-11">
          <input type="email" class="form-control" id="email" placeholder="Email Address" required>
        </div>
      </div>
      <div class="row mb-3">
        <div class="col-md-1 d-flex align-items-center justify-content-center">
          <i class="fas fa-phone fa-lg"></i>
        </div>
        <div class="col-md-11">
          <input type="text" class="form-control" id="phone" placeholder="Phone Number" required>
        </div>
      </div>
      <button type="submit" class="btn btn-success w-100">Send</button>
    </form>
  </div>

  <%- include('partials/footer') %> <!-- Include Footer -->

  <!-- Add Font Awesome for Icons -->
  <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

  <script>
    function validateForm() {
      // Get input values
      const firstName = document.getElementById('firstName').value;
      const lastName = document.getElementById('lastName').value;
      const email = document.getElementById('email').value;
      const phone = document.getElementById('phone').value;

      // Validate first and last names (only letters)
      const nameRegex = /^[a-zA-Z]+$/;
      if (!nameRegex.test(firstName)) {
        alert("First Name should contain only letters.");
        return false;
      }
      if (!nameRegex.test(lastName)) {
        alert("Last Name should contain only letters.");
        return false;
      }

      // Validate email
      const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      if (!emailRegex.test(email)) {
        alert("Please enter a valid email address.");
        return false;
      }

      // Validate phone (10 digits only)
      const phoneRegex = /^\d{10}$/;
      if (!phoneRegex.test(phone)) {
        alert("Phone Number should be exactly 10 digits.");
        return false;
      }

      return true; // Validation passed
    }
  </script>
</body>
</html>
