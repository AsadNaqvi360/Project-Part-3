<%- include('partials/head') %>
<title>Contact Us</title>
</head>
<body>
  <%- include('partials/main_nav') %> <!-- Include Navbar -->

  <div class="container mt-5">
    <h1 class="text-center mb-4">Contact Us</h1>
    <p class="text-center mb-5">We would love to hear from you! Please fill out the form below, and we'll get back to you as soon as possible.</p>

    <form class="w-75 mx-auto p-4 shadow-lg rounded bg-light" id="contactForm">
      <div class="mb-3 input-group">
        <span class="input-group-text"><i class="fas fa-user"></i></span>
        <input type="text" class="form-control" id="firstName" placeholder="First Name">
      </div>
      <div class="mb-3 input-group">
        <span class="input-group-text"><i class="fas fa-user"></i></span>
        <input type="text" class="form-control" id="lastName" placeholder="Last Name">
      </div>
      <div class="mb-3 input-group">
        <span class="input-group-text"><i class="fas fa-envelope"></i></span>
        <input type="email" class="form-control" id="email" placeholder="Email Address">
      </div>
      <div class="mb-3 input-group">
        <span class="input-group-text"><i class="fas fa-phone"></i></span>
        <input type="tel" class="form-control" id="phone" placeholder="Phone Number">
      </div>
      <button type="reset" class="btn btn-success w-100">Send</button>
    </form>
  </div>

  <%- include('partials/footer') %> <!-- Include Footer -->

  <!-- Add Font Awesome for Icons -->
  <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
</body>
</html>
